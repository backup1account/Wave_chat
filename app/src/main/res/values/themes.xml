    <!--  Fields in User Settings (TextLayoutInput)  -->
    <style name="App.UserSettings.Fields" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="hintTextColor">@color/a_bit_lighter_black</item>
        <item name="android:textColorHint">@color/a_bit_lighter_black</item>
