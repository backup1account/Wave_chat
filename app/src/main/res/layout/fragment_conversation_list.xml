    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_basic"
            android:orientation="horizontal">

        <ImageButton
                android:id="@+id/go_back_from_conversation_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_arrow_back_nav_24"
                android:background="@android:color/transparent"
                android:clickable="true" />

        <TextView
                android:id="@+id/conversationUserNameNavbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="@color/upNavbarFontIconsColor"
                android:text="Ala"
                android:textSize="18sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/conversationRView"
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="85dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sendMessageTextInputLayout"
                android:layout_width="330dp"
                android:layout_height="57dp"
                android:layout_marginHorizontal="13dp"
                android:hint="Type your message..."
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sendMessageTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/selectCompleteSentencesMsgBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/pfp_change_icon"
                    android:src="@drawable/ic_baseline_library_books_24"/>

            <ImageButton
                    android:id="@+id/sendMessageBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/pfp_change_icon"
                    android:src="@drawable/ic_baseline_send_24"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>