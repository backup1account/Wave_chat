<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginHorizontal="60dp"
              android:gravity="center_horizontal|center_vertical"
              tools:context=".ui.auth.RegisterFragment"
              android:orientation="vertical"
              android:focusableInTouchMode="true">

    <TextView
            android:text="@string/app_name_for_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:id="@+id/appNameLogo"
            app:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:fontFamily="cursive"/>

    <TextView android:id="@+id/registerTextHeader"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Create your Account" />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rNameLayoutField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_name"
            style="@style/Widget.App.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rEmailLayoutField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_email"
            style="@style/Widget.App.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rEmailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rPasswordLayoutField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_password"
            app:passwordToggleEnabled="true"
            style="@style/Widget.App.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rPasswordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:text="Sign up"
            style="@style/Widget.MaterialComponents.Button"
    />

    <Button
            android:id="@+id/loginRedirectionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have Account?"
            style="@style/Widget.MaterialComponents.Button.TextButton"
    />

</LinearLayout>